<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F7F8"
    tools:context=".MainActivity"
    android:columnCount="4"
    android:rowCount="5"
    android:backgroundTint="#EDEEF0"
    >

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="411dp"
        android:layout_height="432dp"
        android:background="@drawable/log_regi_box"
        android:contextClickable="true"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

        <EditText
            android:id="@+id/editTextTextAcc"
            android:layout_width="329dp"
            android:layout_height="56dp"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:ems="10"
            android:hint="Account"
            android:inputType="text"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/editTextTextPassword"
            android:layout_width="329dp"
            android:layout_height="56dp"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/forgetpasslink"
            android:layout_width="174dp"
            android:layout_height="36dp"
            android:layout_marginLeft="110sp"
            android:backgroundTint="@color/button_bgcolor"
            android:text="forget password?"
            android:textSize="18dp" />

        <Button
            android:id="@+id/buttonLogin1"
            android:layout_width="332dp"
            android:layout_height="60dp"
            android:layout_marginTop="20sp"
            android:layout_marginBottom="10sp"
            android:backgroundTint="@color/button_bgcolor"
            android:text="Sign in"
            android:textColorHighlight="#EDEEF0"
            android:textColorLink="#EDEEF0"
            android:textSize="20sp" />

        <Button
            android:id="@+id/buttonResigter1"
            android:layout_width="332dp"
            android:layout_height="60dp"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:backgroundTint="@color/button_bgcolor"
            android:text="Resigter"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="292dp"
        android:layout_height="182dp"

        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.512"
        tools:ignore="NotSibling">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="216dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:src="@drawable/iconlh"
            tools:layout_editor_absoluteX="45dp"
            tools:layout_editor_absoluteY="105dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="146dp"
            android:layout_height="match_parent"
            android:text="Light Novel Hako"
            android:textSize="45sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="215dp"
            tools:layout_editor_absoluteY="105dp" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>